<div class="posts-pagination">
    {% if posts.pagination.prev %}
        <a href="{{posts.pagination.prev.link}}" class="prev {{posts.pagination.prev.link|length ? '' : 'invisible'}}">Pr√©c.</a>
    {% endif %}
    <ul class="pages">
        {% for page in posts.pagination.pages %}
            <li class="{{page.class}}">
                {% if page.link %}
                    <a href="{{page.link}}">{{page.title}}</a>
                {% else %}
                    <span>{{page.title}}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    {% if posts.pagination.next %}
        <a href="{{posts.pagination.next.link}}" class="next {{posts.pagination.next.link|length ? '' : 'invisible'}}">Suiv.</a>
    {% endif %}
</div>